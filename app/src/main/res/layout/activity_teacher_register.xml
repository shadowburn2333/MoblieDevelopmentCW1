<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_bg"
    android:layout_height="match_parent">

    <EditText
        android:textColor="@android:color/white"
        android:id="@+id/teacherRegisterPasswordInputfieldCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/teacherRegisterBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherRegisterEmailInputField"
        app:layout_constraintVertical_bias="0.629" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/teacherRegisterPasswordTitlecheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Password Again:"
        android:textSize="16sp"

        app:layout_constraintBottom_toTopOf="@+id/teacherRegisterBtn"
        app:layout_constraintEnd_toStartOf="@+id/teacherRegisterPasswordInputfieldCheck"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/teacherRegisterPasswordInputfieldCheck"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/teacherRegisterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Teacher Register"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:id="@+id/teacherRegisterBtn"
        android:layout_width="169dp"
        android:layout_height="53dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherRegisterTitle"
        app:layout_constraintVertical_bias="0.88" />

    <EditText
        android:id="@+id/teacherRegisterEmailInputField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="text"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/teacherRegisterBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherRegisterTitle"
        app:layout_constraintVertical_bias="0.259" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/teacherRegisterEmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Email:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/teacherRegisterNameTitle"
        app:layout_constraintEnd_toStartOf="@+id/teacherRegisterEmailInputField"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/teacherRegisterEmailInputField"
        app:layout_constraintVertical_bias="0.100000024" />

    <EditText
        android:id="@+id/teacherRegisterPasswordInputfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/teacherRegisterPasswordInputfieldCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherRegisterEmailInputField"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/teacherRegisterPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Password:"
        android:textSize="16sp"

        app:layout_constraintBottom_toTopOf="@+id/teacherRegisterPasswordTitlecheck"
        app:layout_constraintEnd_toStartOf="@+id/teacherRegisterEmailInputField"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/teacherRegisterPasswordInputfield"
        app:layout_constraintVertical_bias="0.157" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/teacherRegisterNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Name:"
        app:layout_constraintBottom_toTopOf="@+id/teacherRegisterPasswordTitle"
        app:layout_constraintEnd_toStartOf="@+id/teacherRegisterNameInputField"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/teacherRegisterNameInputField"
        app:layout_constraintVertical_bias="0.100000024" />

    <EditText
        android:id="@+id/teacherRegisterNameInputField"
        android:layout_width="165dp"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/teacherRegisterPasswordInputfield"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherRegisterEmailInputField"
        app:layout_constraintVertical_bias="0.51" />
    <Button
        android:id="@+id/teacherRegisterPageBackToMainPageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>